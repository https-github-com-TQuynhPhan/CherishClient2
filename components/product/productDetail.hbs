        </div>
        <div class="tab-pane fade" id="info" role="tabpanel" aria-labelledby="info-tab">
            <h5>Additional Information</h5>
            <table class="table table-striped table-bordered mt-3">
                <thead>
                <tr>
                    <th scope="row" class="w-150 dark-grey-text h6">Weight</th>
                    <td><em>0.3 kg</em></td>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th scope="row" class="w-150 dark-grey-text h6">Dimensions</th>
                    <td><em>50 Ã— 60 cm</em></td>
                </tr>
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">

            <div class="media mt-3 mb-4">
                <div class="media-body">
                    <div id="reviewsProduct">
                    </div>
                </div>
            </div>
            <hr>
            <h5 class="mt-4">Add a review</h5>
            <p>Your email address will not be published.</p>
            <div>
                <!-- Your review -->
            {{#each productDetail}}
                <form>

                    <input type="hidden" name="productID" value="{{ProductID}}">

                    {{#unless user}}
                        <div class="md-form md-outline">
                            <label for="form75">Name</label>
                            <input type="text" name="Name" id="form75" class="form-control pr-6">
                        </div>
                    {{/unless}}

                    <div class="md-form md-outline">
                        <label for="form77">Rate</label>
                        <input type="number" name="Rate" id="form77" class="form-control pr-6"> </br>
                    </div>

                    <div class="md-form md-outline">
                        <label for="form76">Your review</label>
                        <input type="text" id="form76" name="Detail" class="md-textarea form-control pr-6" rows="4">

                    </div>

                    <div class="text-right pb-2">
                        <button type="submit" id="postReview" class="btn btn-primary">Add a review</button>
                        </br>
                    </div>
                </form>
            {{/each}}

            </div>
        </div>
    </div>

</div>

{{#section 'script'}}
    <script>
        // add review
        $('#postReview').on('click', e => {
            e.preventDefault();
            let productID = $('input[name=productID]').val();
            <!--let name={{user.account}};-->
            let name = $('input[name=Name]').val();
            let rate = $('input[name=Rate]').val();
            let detail = $('input[name=Detail]').val();

            $.ajax({
                url: "/api/product/review",
                method: 'POST',
                data: {
                    name,
                    productID,
                    rate,
                    detail
                },
                success: function (data) {
                    console.log(data)
                }
            });
        });

        //load review
        $.getJSON(`/api/product/:${$('input[name=productID]').val()}/reviews`,function (data) {
            let arr=[];
            for (const d of data){
                if (d.ProductID===$('input[name=productID]').val()){
                    arr.push(d);
                }
            }

            data=arr;
            let rate=data.Rate;
            let detail=data.Rate;
            let html='';
            for (const d of data) {
                html+=`<p>${d.Name}</p>`;
                for (let i = 0; i < d.Rate; i++) {
                    html += '<i class="fas fa-star fa-sm text-primary"></i>';
                }
                for (let i = 0; i < 5 - d.Rate; i++) {
                    html += '<i class="far fa-star fa-sm text-primary"></i>';
                }
                html += `<p>${d.Detail}</p>`;
            }
            $('#reviewsProduct').html(html);
        });
    </script>
{{/section}}
